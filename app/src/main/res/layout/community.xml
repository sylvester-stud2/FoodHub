<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/communitycook">

        <ImageView
            android:id="@+id/friendprofile"
            android:layout_width="70dp"
            android:layout_height="75dp"
            app:srcCompat="@drawable/profile"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="57dp" />

        <Button
            android:id="@+id/addfriend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="180dp"
            android:layout_marginBottom="124dp"
            android:text="Make Friend"
            app:layout_constraintBottom_toTopOf="@+id/post"
            app:layout_constraintStart_toEndOf="@+id/friendprofile" />

        <TextView
            android:id="@+id/postprofile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="124dp"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintBottom_toTopOf="@+id/post"
            app:layout_constraintEnd_toStartOf="@+id/addfriend"
            app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintStart_toEndOf="@+id/friendprofile"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/post"
            android:layout_width="378dp"
            android:layout_height="148dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="16dp"
            android:onClick="AddPostonClick"
            android:text="Post Recipe"
            android:textSize="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.526"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/friendprofile" />

        <ImageView
            android:id="@+id/thumbsup"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:clickable="true"
            android:onClick="onThumbsUpClicked"
            android:src="@drawable/thumbsup"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/post" />


        <ImageView
            android:id="@+id/thumbsdown"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="24dp"
            android:clickable="true"
            android:onClick="onThumbsDownClicked"
            android:src="@drawable/thumbsdown"
            app:layout_constraintStart_toEndOf="@+id/thumbsup"
            app:layout_constraintTop_toBottomOf="@+id/post" />

        <ImageView
            android:id="@+id/comment"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="24dp"
            android:clickable="true"
            android:onClick="onCommentClicked"
            android:src="@drawable/comment"
            app:layout_constraintStart_toEndOf="@+id/thumbsdown"
            app:layout_constraintTop_toBottomOf="@+id/post"
            tools:ignore="MissingConstraints" />
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navcomm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:menu="@layout/bottom_nav_comm"
            app:itemIconTint="@color/white"
            app:itemTextColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>