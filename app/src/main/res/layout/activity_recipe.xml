<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/create_recipe"
    tools:context=".Createrecipe">

    <!-- Title -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recipes"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"/>

    <!-- Breakfast Section -->
    <LinearLayout
        android:id="@+id/breakfastLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/titleTextView"
        android:layout_marginTop="32dp"
        android:padding="16dp"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/breakfastTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Breakfast"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/breakfastButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Generate"
            android:textSize="18sp"
            android:background="#3F51B5"
            android:textColor="#FFFFFF"
            android:layout_marginTop="16dp"/>

        <!-- Add space between sections -->
        <View
            android:layout_width="match_parent"
            android:layout_height="16dp"/>

    </LinearLayout>

    <!-- Lunch Section -->
    <LinearLayout
        android:id="@+id/lunchLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/breakfastLayout"
        android:padding="16dp"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/lunchTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lunch"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/lunchButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Generate"
            android:textSize="18sp"
            android:background="#3F51B5"
            android:textColor="#FFFFFF"
            android:layout_marginTop="16dp"/>

        <!-- Add space between sections -->
        <View
            android:layout_width="match_parent"
            android:layout_height="16dp"/>

    </LinearLayout>

    <!-- Dinner Section -->
    <LinearLayout
        android:id="@+id/dinnerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/lunchLayout"
        android:padding="16dp"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/dinnerTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dinner"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/dinnerButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Generate"
            android:textSize="18sp"
            android:background="#3F51B5"
            android:textColor="#FFFFFF"
            android:layout_marginTop="16dp"/>

    </LinearLayout>

</RelativeLayout>
